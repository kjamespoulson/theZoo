<h1> Learn What We Feed Our Animals! </h1>

{{> page/nav}}

<table>
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.foodID}}</td>
            <td>{{this.foodName}}</td>
            <td>{{this.foodGroup}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2> Add a Food </h2>
<form id="addFoodForm" action="/addFoodForm" method="POST"> 
    <label for="input-foodName"> Food Name: </label>
    <input type="text" name="input-foodName" id="input-foodName">

    <label for="input-foodGroup"> Food Group: </label>
    <input type="text" name="input-foodGroup" id="input-foodGroup">

    <input type="submit" value="Add">
</form>

<h2> Update a Food </h2>
<form action="Foods.html" method="put">
    <label for="foodName"> foodName </label>
    <input id="foodName" type="text">
    <label for="foodGroup"> foodGroup </label>
    <input id="foodGroup" type="text">
    <input type="submit" value="Enter">
</form>
<h2> Delete a Food </h2>
<form action="Foods.html" method="delete">
    <label for="deleteFood"> Remove Food </label> 
        <select id="deleteFood" name="deleteFood">
        <option value=""> Select a Food </option>            
        <option value="1"> chicken </option>
        <option value="2"> oats </option>
        <option value="3"> salmon </option>
        <option value="4"> banana </option>   
</select>
<input type="submit" value="Enter">                     
</form>